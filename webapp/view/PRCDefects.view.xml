<mvc:View
    controllerName="com.taskmanagement.taskmanagement.controller.PRCDefects"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        title="PRCDefects"
        showNavButton="true"
        navButtonPress="onpresshome"
    >
        <VBox class="sapUiSmallMargin">
            <!-- Toolbar -->
            <Toolbar>
                <Title
                    text="PRCDefects "
                    level="H2"
                />
                <ToolbarSpacer />
                <Button
                    text="Add"
                    icon="sap-icon://add"
                    press="onAddPress"
                    type="Emphasized"
                />
                <Button
                    text="Edit"
                    icon="sap-icon://edit"
                    press="onEditPress"
                    type="Emphasized"
                />
                <Button
                    text="Delete"
                    icon="sap-icon://delete"
                    press="onDeletePress"
                    type="Negative"
                />
                <Button
                    icon="sap-icon://refresh"
                    press="onrefreshPress"
                    type="Emphasized"
                />
            </Toolbar>

            <!-- Table -->
            <Table
                id="PRCDefectsTable"
                items="{TaskDataModel>/}"
                inset="false"
                mode="SingleSelectLeft"
            >
                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column>
                        <Text text="Title" />
                    </Column>
                    <Column>
                        <Text text="Description" />
                    </Column>
                    <Column>
                        <Text text="Assigned To" />
                    </Column>
                    <Column>
                        <Text text="Priority" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Effort" />
                    </Column>
                    <Column>
                        <Text text="Resolution" />
                    </Column>
                    <Column>
                        <Text text="Created Date" />
                    </Column>
                    <Column>
                        <Text text="Created By" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{TaskDataModel>id}" />
                            <Text text="{TaskDataModel>title}" />
                            <Text text="{TaskDataModel>description}" />
                            <Text text="{TaskDataModel>assignedTo}" />
                            <Text text="{TaskDataModel>priority}" />
                            <Text text="{TaskDataModel>status}" />
                            <Text text="{TaskDataModel>effort}" />
                            <Text text="{TaskDataModel>resolution}" />
                            <!-- Only Date (not time) -->
                            <Text
                                text="{ path: 'TaskDataModel>createdDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' }}"
                            />
                            <Text text="{TaskDataModel>createdBy}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>
