<mvc:View
    xmlns:odata="sap.ui.comp.odata"
    controllerName="com.taskmanagement.taskmanagement.controller.Incidents"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        title="Incidents Management"
        showNavButton="true"
        navButtonPress="onpresshome"
    >
        <!-- <VBox class="sapUiSmallMargin"> -->
        <!-- Toolbar -->
        <subHeader>
            <Toolbar>
                <Title
                    text=""
                    level="H2"
                />
                <ToolbarSpacer />
                <Label text="Status:" />
                <ComboBox
                    id="IdincStatus"
                    selectionChange=".onFilterChange"
                >
                    <core:Item
                        key="Pending"
                        text="Pending"
                    />
                    <core:Item
                        key="Open"
                        text="Open"
                    />
                    <core:Item
                        key="InProgress"
                        text="InProgress"
                    />
                    <core:Item
                        key="Closed"
                        text="Closed"
                    />
                    <core:Item
                        key="Canceled"
                        text="Canceled"
                    />
                    <core:Item
                        key="Ready for retest"
                        text="Ready for retest"
                    />
                    <core:Item
                        key="Resloved"
                        text="Resloved"
                    />
                </ComboBox>
                <Label text="Developer:" />
                <ComboBox
                    id="idincdeveloper"
                    selectionChange=".onFilterChange"
                    items="{DeveloperModel>/}"
                >
                    <core:Item
                        key="{DeveloperModel>name}"
                        text="{DeveloperModel>name}"
                    />
                </ComboBox>
                <DateRangeSelection
                    id="idincDateRange"
                    width="10%"
                    displayFormat="yyyy-MM-dd"
                    change="onFilterChange"
                    placeholder="select the daterange "
                />
                <Button
                    text="Add"
                    icon="sap-icon://add"
                    press="onAddPress"
                    type="Emphasized"
                />
                <Button
                    text="Edit"
                    icon="sap-icon://edit"
                    press="onEditPress"
                    type="Emphasized"
                />
                <Button
                    text="Delete"
                    icon="sap-icon://delete"
                    press="onDeletePress"
                    type="Negative"
                />
                <Button
                    text="Show Summary"
                    press="onShowsummary"
                    type="Emphasized"
                />
                <Button
                    icon="sap-icon://refresh"
                    press="onrefreshPress"
                    type="Emphasized"
                />
            </Toolbar>
        </subHeader>

        <!-- Table -->
        <content>
            <Table
                id="Incidents"
                inset="false"
                mode="SingleSelectLeft"
                sticky="ColumnHeaders"
                items="{
                        path: 'TaskDataModel>/',
                        sorter: { path: 'updateDate', descending: true }
                    }"
            >
                <columns>
                    <Column>
                        <Text text="TaskNumber" />
                    </Column>
                    <Column>
                        <Text text="Incidents" />
                    </Column>

                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Analyst" />
                    </Column>
                    <Column>
                        <Text text="Developer" />
                    </Column>
                    <Column>
                        <Text text="Created Date" />
                    </Column>
                    <Column>
                        <Text text="Updated Date" />
                    </Column>
                    <Column>
                        <Text text="On Hold" />
                    </Column>
                    <Column>
                        <Text text="Vistex" />
                    </Column>
                    <Column>
                        <Text text="Comment" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{TaskDataModel>number}" />
                            <Text text="{TaskDataModel>changeRequest}" />

                            <Text text="{TaskDataModel>status}" />
                            <Text text="{TaskDataModel>BA}" />
                            <Text text="{TaskDataModel>assignedTo}" />
                            <Text
                                text="{
                                    path: 'TaskDataModel>createDate',
                                    type: 'sap.ui.model.type.DateTime',
                                    formatOptions: {
                                        pattern: 'dd-MMM-yyyy HH:mm:ss',
                                        UTC: false
                                    }
                                }"
                            />
                            <Text
                                text="{
                                    path: 'TaskDataModel>updateDate',
                                    type: 'sap.ui.model.type.DateTime',
                                    formatOptions: {
                                        pattern: 'dd-MMM-yyyy HH:mm:ss',
                                        UTC: false
                                    }
                                }"
                            />

                            <Text
                                text="{path: 'TaskDataModel>onHoldcheck', formatter: '.yesNoFormatter'}"
                            />
                            <Text text="{TaskDataModel>vistexcheck}" />
                            <!-- <Text text="{TaskDataModel>comment}" /> -->
                            <ExpandableText
                                maxCharacters="40"
                                class="sapUiTinyMarginBottom sapUiTinyMarginTop"
                                text="{TaskDataModel>comment}"
                                overflowMode="Popover"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <!-- </VBox> -->
    </Page>
</mvc:View>
