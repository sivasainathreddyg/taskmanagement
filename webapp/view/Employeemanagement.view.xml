<mvc:View
    controllerName="com.taskmanagement.taskmanagement.controller.Employeemanagement"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        title="Employees Management"
        showNavButton="true"
        navButtonPress="onpresshome"
    >
        <VBox class="sapUiSmallMargin">
            <Toolbar>
                <Title
                    text=""
                    level="H2"
                />
                <ToolbarSpacer />
                <Button
                    text="Add"
                    icon="sap-icon://add"
                    press="onAddPress"
                    type="Emphasized"
                />
                <Button
                    text="Edit"
                    icon="sap-icon://edit"
                    press="onEditPress"
                    type="Emphasized"
                />
                <Button
                    text="Delete"
                    icon="sap-icon://delete"
                    press="onDeletePress"
                    type="Negative"
                />
                <Button
                    icon="sap-icon://refresh"
                    press="onrefreshPress"
                    type="Emphasized"
                />
            </Toolbar>

            <Table
                id="employeeTable"
                items="{TaskDataModel>/}"
                inset="false"
                mode="SingleSelectLeft"
            >
                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column>
                        <Text text="Name" />
                    </Column>
                    <Column>
                        <Text text="Email" />
                    </Column>
                    <Column>
                        <Text text="Admin" />
                    </Column>
                    <Column>
                        <Text text="Role" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{TaskDataModel>id}" />
                            <Text text="{TaskDataModel>name}" />
                            <Text text="{TaskDataModel>email}" />
                            <Text text="{= ${TaskDataModel>admin} === 'Y' ? 'Yes' : 'No' }" />
                            <Text text="{=${TaskDataModel>role} === 'D' ? 'Developer' : 'Analyst'}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>
