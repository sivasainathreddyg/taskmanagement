<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="ProjectManagement"
        title="PRCDefects"
        draggable="true"
        resizable="true"
    >
        <VBox class="sapUiSmallMargin">
            <!-- <Label text="Project ID" />
            <Input
                id="projectIDInput"
                type="Number"
                value="{ProjectModel>/projectID}"
                 editable="{= ${ProjectModel>/isEditable} }"
                
            /> -->

            <Label
                text="KYnumber"
                required="true"
            />
            <Input
                id="numberInput"
                value="{ProjectModel>/KYnumber}"
                editable="{= ${ProjectModel>/isEditable} }"
            />

            <Label
                text="Project Name"
                required="true"
            />
            <Input
                id="projectNameInput"
                value="{ProjectModel>/projectName}"
                placeholder="Project Name"
            />

            <Label
                text="Description"
                required="true"
            />
            <TextArea
                id="PdescriptionInput"
                value="{ProjectModel>/description}"
                placeholder="Description"
                width="100%"
            />

            <Label
                text="Planned Start Date"
                required="true"
            />
            <DatePicker
                id="plannedStartDateInput"
                value="{ProjectModel>/plannedStartDate}"
                valueFormat="yyyy-MM-dd"
                displayFormat="long"
            />

            <Label
                text="Planned End Date"
                required="true"
            />
            <DatePicker
                id="plannedEndDateInput"
                value="{ProjectModel>/plannedEndDate}"
                valueFormat="yyyy-MM-dd"
                displayFormat="long"
            />

            <Label
                text="Status"
                required="true"
            />
            <Select
                id="PstatusInput"
                selectedKey="{ProjectModel>/status}"
                width="100%"
            >
                <core:Item
                    key=""
                    text="-- Select Status --"
                />
                <core:Item
                    key="Pending"
                    text="Pending"
                />
                <core:Item
                    key="Open"
                    text="Open"
                />
                <core:Item
                    key="InProgress"
                    text="InProgress"
                />
                <core:Item
                    key="Closed"
                    text="Closed"
                />
                <core:Item
                    key="Canceled"
                    text="Canceled"
                />
                <core:Item
                    key="Ready for retest"
                    text="Ready for retest"
                />
                <core:Item
                    key="Resloved"
                    text="Resloved"
                />
            </Select>

            <Label
                text="Developer"
                required="true"
            />
            <!-- <Input
                id="PassignedToInput"
                value="{ProjectModel>/assignedTo}"
                placeholder="Assigned To"
            /> -->
             <HBox>
                <MultiComboBox  
                    id="PassignedToInput"
                    width="100%"
                    selectedKeys="{ProjectModel>/assignedTo}"
                    items="{DeveloperModel>/}"
                    placeholder="Select Developer"
                >
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                    <items>
                        <core:Item
                            key="{DeveloperModel>name}"
                            text="{DeveloperModel>name}"
                        />
                    </items>
                </MultiComboBox >

                <!-- Small “+” icon for adding a new developer -->
                <Button
                    icon="sap-icon://add"
                    type="Transparent"
                    tooltip="Add new developer"
                    press=".onAddNewEmployee('D')"
                />
            </HBox>

            <Label
                text="Team Size"
                required="true"
            />
            <Input
                id="teamSizeInput"
                type="Number"
                value="{ProjectModel>/teamSize}"
                placeholder="Team Size"
            />
        </VBox>

        <beginButton>
            <Button
                text="Save"
                press="onCreateupdatePress"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCancelPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
