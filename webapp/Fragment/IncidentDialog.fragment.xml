<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="Incident"
        title="Change Request"
        draggable="true"
        resizable="true"
    >
        <VBox class="sapUiSmallMargin">
            <!-- Number -->
            <Label
                text="TaskNumber"
                required="true"
            />
            <Input
                id="IcrNumber"
                editable="{= ${IncidentModel>/isEditable} }"
                value="{IncidentModel>/number}"
            />

            <!-- Change Request -->
            <Label
                text="Incidents"
                required="true"
            />
            <Input
                id="incidents"
                value="{IncidentModel>/changeRequest}"
            />

            <!-- Status (Hardcoded) -->
            <Label
                text="Status"
                required="true"
            />
            <Select
                width="100%"
                id="IcrStatus"
                selectedKey="{IncidentModel>/status}"
            >
                <core:Item
                    key=""
                    text="-- Select Status --"
                />
                <core:Item
                    key="Pending"
                    text="Pending"
                />
                <core:Item
                    key="Open"
                    text="Open"
                />
                <core:Item
                    key="InProgress"
                    text="InProgress"
                />
                <core:Item
                    key="Closed"
                    text="Closed"
                />
                <core:Item
                    key="Canceled"
                    text="Canceled"
                />
                <core:Item
                    key="Ready for retest"
                    text="Ready for retest"
                />
                <core:Item
                    key="Resloved"
                    text="Resloved"
                />
            </Select>
            <!-- BA (Input instead of dropdown) -->
            <Label
                text="Analyst"
                required="true"
            />
            <HBox>
                <ComboBox
                    id="IcrBA"
                    width="100%"
                    selectedKey="{IncidentModel>/BA}"
                    items="{AnalystModel>/}"
                    placeholder="Select Analyst"
                >
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                    <items>
                        <core:Item
                            key="{AnalystModel>name}"
                            text="{AnalystModel>name}"
                        />
                    </items>
                </ComboBox>

                <Button
                    icon="sap-icon://add"
                    type="Transparent"
                    tooltip="Add new Analyst"
                    press=".onAddNewEmployee('A')"
                />
            </HBox>

            <!-- <Input
                id="IcrBA"
                value="{IncidentModel>/BA}"
            /> -->

            <!-- Assigned To (Input instead of dropdown) -->
            <!-- <Label text="Developer" required="true"/>
            <Input
                id="IcrAssignedTo"
                value="{IncidentModel>/assignedTo}"
            /> -->

            <Label
                text="Developer"
                required="true"
            />

            <HBox>
                <ComboBox
                    id="IcrAssignedTo"
                    width="100%"
                    selectedKey="{IncidentModel>/assignedTo}"
                    items="{DeveloperModel>/}"
                    placeholder="Select Developer"
                >
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                    <items>
                        <core:Item
                            key="{DeveloperModel>name}"
                            text="{DeveloperModel>name}"
                        />
                    </items>
                </ComboBox>

                <!-- Small “+” icon for adding a new developer -->
                <Button
                    icon="sap-icon://add"
                    type="Transparent"
                    tooltip="Add new developer"
                    press=".onAddNewEmployee('D')"
                />
            </HBox>

            <!-- Description -->
            <Label
                text="Description"
                required="true"
            />
            <TextArea
                id="IcrDescription"
                value="{IncidentModel>/description}"
                rows="2"
                width="100%"
            />
            <Label text="Created Date" />
            <!-- <DatePicker
                id="ICreateDate"
                value="{IncidentModel>/createDate}"
                displayFormat="yyyy-MM-dd"
                valueFormat="yyyy-MM-dd"
            /> -->
            <DateTimePicker
                id="ICreateDate"
                value="{IncidentModel>/createDate}"
                displayFormat="yyyy-MM-dd HH:mm:ss"
                valueFormat="yyyy-MM-dd'T'HH:mm:ss"
                placeholder="Select date and time"
            />
            <!-- On Hold (Radio Buttons) -->
            <CheckBox
                id="IcrOnHold"
                text="On Hold"
                selected="{IncidentModel>/onHoldcheck}"
            />

            <!-- Vistex Check (Horizontal Radio Buttons) -->
            <Label text="Vistex Check" />
            <RadioButtonGroup
                id="IcrVistex"
                selectedIndex="{IncidentModel>/vistexcheck}"
                columns="2"
            >
                <buttons>
                    <RadioButton text="Yes" />
                    <RadioButton text="No" />
                </buttons>
            </RadioButtonGroup>
            <Label text="Comments" />
            <TextArea
                id="IcrComments"
                value="{IncidentModel>/comment}"
                rows="2"
                width="100%"
            />
        </VBox>

        <beginButton>
            <Button
                text="Save"
                press="onCreateupdatePress"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCancelPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
