<mvc:View
    controllerName="com.taskmanagement.taskmanagement.controller.PRCDefects"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        title="PRC Defects Management"
        showNavButton="true"
        navButtonPress="onpresshome"
    >
        <!-- <VBox class="sapUiSmallMargin"> -->
        <subHeader>
            <!-- Toolbar -->
            <Toolbar>
                <Title
                    text=" "
                    level="H2"
                />
                <ToolbarSpacer />
                <Label text="Status:" />
                <ComboBox
                    id="IdprcStatus"
                    selectionChange=".onFilterChange"
                >
                    <core:Item
                        key="Pending"
                        text="Pending"
                    />
                    <core:Item
                        key="Open"
                        text="Open"
                    />
                    <core:Item
                        key="InProgress"
                        text="InProgress"
                    />
                    <core:Item
                        key="Closed"
                        text="Closed"
                    />
                    <core:Item
                        key="Canceled"
                        text="Canceled"
                    />
                    <core:Item
                        key="Ready for retest"
                        text="Ready for retest"
                    />
                    <core:Item
                        key="Resloved"
                        text="Resloved"
                    />
                </ComboBox>
                <Label text="Developer:" />
                <ComboBox
                    id="idprcdeveloper"
                    selectionChange=".onFilterChange"
                    items="{DeveloperModel>/}"
                >
                    <core:Item
                        key="{DeveloperModel>name}"
                        text="{DeveloperModel>name}"
                    />
                </ComboBox>
                <DateRangeSelection
                    id="idprcDateRange"
                    width="10%"
                    displayFormat="yyyy-MM-dd"
                    change="onFilterChange"
                    placeholder="select the daterange "
                />
                <Button
                    text="Add"
                    icon="sap-icon://add"
                    press="onAddPress"
                    type="Emphasized"
                />
                <Button
                    text="Edit"
                    icon="sap-icon://edit"
                    press="onEditPress"
                    type="Emphasized"
                />
                <Button
                    text="Delete"
                    icon="sap-icon://delete"
                    press="onDeletePress"
                    type="Negative"
                />
                <Button
                    text="Show Summary"
                    press="onShowsummary"
                    type="Emphasized"
                />
                <Button
                    icon="sap-icon://refresh"
                    press="onrefreshPress"
                    type="Emphasized"
                />
            </Toolbar>
        </subHeader>

        <!-- Table -->
        <content>
            <Table
                id="PRCDefectsTable"
                items="{TaskDataModel>/}"
                inset="false"
                mode="SingleSelectLeft"
                sticky="ColumnHeaders"
            >
                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column>
                        <Text text="Title" />
                    </Column>
                    <Column>
                        <Text text="Description" />
                    </Column>
                    <Column>
                        <Text text="Developer" />
                    </Column>
                    <Column>
                        <Text text="Priority" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Effort" />
                    </Column>
                    <Column>
                        <Text text="Resolution" />
                    </Column>
                    <Column>
                        <Text text="Created Date" />
                    </Column>
                    <Column>
                        <Text text="Created By" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{TaskDataModel>id}" />
                            <Text text="{TaskDataModel>title}" />
                            <ExpandableText
                                maxCharacters="40"
                                class="sapUiTinyMarginBottom sapUiTinyMarginTop"
                                text="{TaskDataModel>description}"
                                overflowMode="Popover"
                            />
                            <!-- <Text text="{TaskDataModel>description}" /> -->
                            <Text text="{TaskDataModel>assignedTo}" />
                            <Text text="{TaskDataModel>priority}" />
                            <Text text="{TaskDataModel>status}" />
                            <Text text="{TaskDataModel>effort}" />

                            <ExpandableText
                                maxCharacters="40"
                                class="sapUiTinyMarginBottom sapUiTinyMarginTop"
                                text="{TaskDataModel>resolution}"
                                overflowMode="Popover"
                            />
                            <!-- Only Date (not time) -->
                            <Text
                                text="{ path: 'TaskDataModel>createdDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' }}"
                            />
                            <Text text="{TaskDataModel>createdBy}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <!-- </VBox> -->
    </Page>
</mvc:View>
