<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="prcDefectsDialog"
        title="PRCDefects"
        draggable="true"
        resizable="true"
    >
        <VBox class="sapUiSmallMargin">
            <Label
                text="ID"
                required="true"
            />
            <Input
                id="idInput"
                type="Number"
                value="{PRCDefectsModel>/id}"
                editable="{= ${PRCDefectsModel>/isEditable} }"
            />
            <Label
                text="Title"
                required="true"
            />
            <Input
                id="titleInput"
                value="{PRCDefectsModel>/title}"
                placeholder="Enter title"
            />

            <Label
                text="Description"
                required="true"
            />
            <TextArea
                id="descriptionInput"
                value="{PRCDefectsModel>/description}"
                placeholder="Enter description"
                width="100%"
            />

            <Label
                text="Developer"
                required="true"
            />
            <HBox>
                <ComboBox
                    id="assignedToInput"
                    width="100%"
                    selectedKey="{PRCDefectsModel>/assignedTo}"
                    items="{DeveloperModel>/}"
                    placeholder="Select Developer"
                >
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                    <items>
                        <core:Item
                            key="{DeveloperModel>name}"
                            text="{DeveloperModel>name}"
                        />
                    </items>
                </ComboBox>

                <!-- Small “+” icon for adding a new developer -->
                <Button
                    icon="sap-icon://add"
                    type="Transparent"
                    tooltip="Add new developer"
                    press=".onAddNewEmployee('D')"
                />
            </HBox>

            <!-- <Label
                text="Priority"
                required="true"
            />
            <Input
                id="priorityInput"
                value="{PRCDefectsModel>/priority}"
                placeholder="Priority"
            /> -->
            <Label
                text="Priority"
                required="true"
            />
            <Select
                id="priorityInput"
                selectedKey="{PRCDefectsModel>/priority}"
                width="100%"
            >
                <core:Item
                    key=""
                    text="-- Select Priority --"
                />
                <core:Item
                    key="Critical"
                    text="Critical"
                />
                <core:Item
                    key="High"
                    text="High"
                />
                <core:Item
                    key="Medium"
                    text="Medium"
                />
                <core:Item
                    key="Low"
                    text="Low"
                />
            </Select>

            <!-- <Label text="Status"  required="true"/>
            <Input
                id="statusInput"
                value="{PRCDefectsModel>/status}"
                placeholder="Status"
            /> -->
            <Label
                text="Status"
                required="true"
            />
            <Select
                id="statusInput"
                selectedKey="{PRCDefectsModel>/status}"
                width="100%"
            >
                <core:Item
                    key=""
                    text="-- Select Status --"
                />
                <core:Item
                    key="Pending"
                    text="Pending"
                />
                <core:Item
                    key="Open"
                    text="Open"
                />
                <core:Item
                    key="InProgress"
                    text="InProgress"
                />
                <core:Item
                    key="Closed"
                    text="Closed"
                />
                <core:Item
                    key="Canceled"
                    text="Canceled"
                />
                <core:Item
                    key="Ready for retest"
                    text="Ready for retest"
                />
                <core:Item
                    key="Resloved"
                    text="Resloved"
                />
            </Select>

            <Label
                text="Effort"
                required="true"
            />

            <Select
                id="effortInput"
                selectedKey="{PRCDefectsModel>/effort}"
                width="100%"
            >
                <core:Item
                    key=""
                    text="-- Select effort --"
                />
                <core:Item
                    key="High > 40 Hrs"
                    text="High > 40 Hrs"
                />
                <core:Item
                    key="Low &lt; 16 Hrs"
                    text="Low &lt; 16 Hrs"
                />
            </Select>

            <Label text="Resolution" />
            <Input
                id="resolutionInput"
                value="{PRCDefectsModel>/resolution}"
                placeholder="Resolution"
            />

            <Label
                text="Created Date"
                required="true"
            />
            <DatePicker
                id="createdDateInput"
                value="{PRCDefectsModel>/createdDate}"
                valueFormat="yyyy-MM-dd"
                displayFormat="long"
                maxDate="{path: 'PRCDefectsModel>/createdDate', formatter: '.getToday'}"
            />

            <Label
                text="Created By"
                required="true"
            />

            <HBox>
                <ComboBox
                    id="createdByInput"
                    width="100%"
                    selectedKey="{PRCDefectsModel>/createdBy}"
                    items="{AnalystModel>/}"
                    placeholder="Select Analyst"
                >
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                    <items>
                        <core:Item
                            key="{AnalystModel>name}"
                            text="{AnalystModel>name}"
                        />
                    </items>
                </ComboBox>

                <Button
                    icon="sap-icon://add"
                    type="Transparent"
                    tooltip="Add new Analyst"
                    press=".onAddNewEmployee('A')"
                />
            </HBox>
        </VBox>

        <beginButton>
            <Button
                text="Save"
                press="onCreateupdatePress"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCancelPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
